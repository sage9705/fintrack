<CollectionView ItemsSource="{Binding Transactions}" Grid.Row="0">
	<CollectionView.ItemTemplate>
		<DataTemplate>
			<Grid Padding="10">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Grid.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TransactionsViewModel}}, Path=NavigateToEditTransactionCommand}" CommandParameter="{Binding .}" />
				</Grid.GestureRecognizers>
				<Label Text="{Binding Description}" FontSize="Medium" />
				<Label Grid.Column="1" Text="{Binding Amount, StringFormat='{0:C}'}" FontSize="Medium" />
			</Grid>
		</DataTemplate>
	</CollectionView.ItemTemplate>
</CollectionView>